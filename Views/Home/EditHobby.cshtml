@model Hobby

<div class="row mt-5">
    <div>
        <form asp-action="UpdateHobby" method="post">
            <h1>Edit a Hobby</h1>

            <input type="hidden" asp-for="HobbyId" />

            <div class="d-flex flex-column mt-3">
                <label asp-for="HobbyName">Name</label>
                <input asp-for="HobbyName" class="p-1 mt-2 border border-dark border-2 rounded">
                <span asp-validation-for="HobbyName"></span>
            </div>

            <div class="d-flex flex-column mt-3">
                <label asp-for="HobbyDescription">Description</label>
                <textarea asp-for="HobbyDescription" class="mt-2 border border-dark border-2 rounded" rows="4"></textarea>
                <span asp-validation-for="HobbyDescription"></span>
            </div>

            <span class="d-flex justify-content-end">
                <input type="submit" class="mt-3 btn btn-outline-dark border border-dark border-2" value="Update">
            </span>
        </form>
    </div>
</div>